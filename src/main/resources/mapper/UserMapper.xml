<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.salshow.dao.UserDao">
    <select id="queryUser" resultType="User" parameterType="String">
        SELECT * FROM tb_user WHERE Email = #{Email}
    </select>
    <insert id="SaveUser" parameterType="com.salshow.entity.User">
        insert into tb_user (FName,LName,Email,address,password,gender,buyamount,authorize)
        VALUES (#{FName},#{LName},#{Email},#{address},#{password},#{gender},#{buyamount},#{authorize})
    </insert>
</mapper>